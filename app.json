{
  "expo": {
    "name": "All Rewards",
    "slug": "all-rewards",
    "version": "1.0.6",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.allrewards.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "All Rewards uses your location to automatically show the right reward card when you're at a store.",
        "NSPhotoLibraryUsageDescription": "All Rewards needs access to your photos to add reward card images."
      }
    },
    "android": {
      "versionCode": 7,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "com.allrewards.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE"
      ],
      "blockedPermissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      "expo-brightness",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "kotlinVersion": "1.9.25",
            "extraProguardRules": "-keep class com.facebook.react.** { *; }"
          }
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT_UP"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "All Rewards uses your location to automatically show the right reward card when you're at a store."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "All Rewards needs access to your photos to add reward card images."
        }
      ]
    ],
    "scheme": "allrewards",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "76e1e82a-4759-4cd9-9f09-c70478c3ddf5"
      }
    },
    "owner": "danmoss"
  }
}
